#include <stdio.h>

void main()
{
    int i, j, k, space,n;
    
    scanf("%d",&n);
    space=n*2;
    
    for (i=0;i<=n;i++)
    {
        for (k=0;k<space;k++)
        {
            printf(" ");
        }
        for (j=0;j<2*i-1;j++)
        {
            printf("*");
        }

        space--;
        printf("\n");
    }

}